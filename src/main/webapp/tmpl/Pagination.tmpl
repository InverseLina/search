<script id="Pagination" type="text/html">
    <div class="Pagination">

    </div>
</script>

<script id="Pagination-detail" type="text/html">
    <div>
        <ul  class="pagination">
          {{#equal 1 pageIdx}}
              <li class="disabled"><a>&laquo;</a></li>
          	  <li class="active"><a data-page="1">1</a></li>
          {{else}}
              <li ><a class="prev" href="#">&laquo;</a></li>
		      <li><a data-page="1">1</a></li>
          {{/equal}}
          
          {{#if startEllipsis}}
              <li class="disabled"><a>&hellip;</a></li>
          {{/if}}

          {{#fromTo start end pageIdx}}
            {{#equal pageIdx num}}
                <li class="active"><a href="#">{{num}}</a></li>
            {{else}}
                <li class=""><a data-page={{num}}>{{num}}</a></li>
            {{/equal}}
          {{/fromTo}}

          {{#if endEllipsis}}
              <li class="disabled"><a>&hellip;</a></li>
          {{/if}}
          
          {{#if end_1}}
              <li class=""><a data-page={{end_1}}>{{end_1}}</a></li>
          {{/if}}

		  {{#gt pageCount 7}}
	          {{#equal pageIdx pageCount}}
	          	  <li  class="active"><a data-page="{{pageCount}}">{{pageCount}}</a></li>
	          {{else}}
		      	  <li><a data-page="{{pageCount}}">{{pageCount}}</a></li>
	          {{/equal}}
          {{/gt}}
          
          {{#equal pageIdx pageCount}}
	          <li class="nextPage disabled"><a>&raquo;</a></li>
	      {{else}}
	          <li class="nextPage"><a class="next">&raquo;</a></li>
	      {{/equal}}

          <li>
              <select>
                 <option value="15">15</option>
                 <option value="30">30</option>
                 <option value="50">50</option>
                 <option value="100">100</option>
                 <option value="300">300</option>
                 <option value="600">600</option>
                 <option value="900">900</option>
             </select>
          </li>
        </ul>

    </div>
</script>
