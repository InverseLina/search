<script id="FilterEmployer" type="text/html">
  <div class="FilterEmployer">
	<div class="selectedItems employer">
        	<span class="add fade in" data-auto-complete="true" style="display:none">+&nbsp;new company</span>
        	<span class="show autoCompleteContainer">
        		<input type="text" class="autoComplete" data-type="company" placeholder="Enter a employer"/>
        		<label class="clear"><i>&times;</i></label>
        	</span>
        </div>
        <div class="content employer" >
        	<div class="employerRow sliderRow"><span class="labelText">min years:</span>
	        	     <div class="sliderBarContainer">
	        	       <div class="progress">
						  <div class="progress-bar progress-bar-info" style="width: 20%"></div>
						</div>
						 <div class="switch-icon">7</div>
					</div>
        	     </div>
        	     <div class="autoCompleteList">
        	     	 <div class="center">loading...</div>
	        	     {{#each companies}}
	        	     <div class="employerRow">
	        	     	<span class="contentText" data-name="{{name}}">
	        	     		<span class="itemName">{{name}}</span><span class="count">({{count}})</span>
	        	     	</span>
	        	     </div>
	        	     {{/each}}
        	     </div>
        </div>
   </div>
</script>