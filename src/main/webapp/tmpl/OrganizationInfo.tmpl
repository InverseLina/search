<script id="Organization-content" type="text/html">
    <div class="Organization-content">
        <table class="content-table">
            <tr><td class="left"><span>name: </span></td><td class="right"><input type="hidden" name="id" value="{{data.id}}"/><input type="text" name="name" value="{{data.name}}" class="text" placeholder="name" autofocus="autofocus"/></td><td><div class="alert alert-error hide msg name">Please type name value.</div></td>
            <tr>
            <tr><td class="left"><span>schemaname: </span></td><td class="right"><input type="text" name="schemaname" value="{{data.schemaname}}" class="text" placeholder="schemaname" /></td><td><div class="alert alert-error hide msg schemaname">Please type schemaname value.</div></td>
            <tr>
            <tr><td class="left"><span>sfid: </span></td><td class="right"><input type="text" name="sfid" value="{{data.sfid}}" class="text" placeholder="sfid" /></td><td><div class="alert alert-error hide msg sfid">Please Add some approvers.</div></td>
            <tr>
        </table>
    </div>
    <div class="AdminHome">
        <h3 class="title">Administration</h3>
        <div class="locals">
            <div class="header">
                <span>Locals</span>
                <div class="line"></div>
            </div>
            <div class="setting form-inline">
                <span>Distance in:</span>
                <select name="local_distance">
                    <option value="k">Kilometers</option>
                    <option value="m">Meters</option>
                </select>
            </div>
            <div class="setting form-inline">
                <span>Date format:</span>
                <select name="local_date">
                    <option>YYYY-MM-DD</option>
                    <option>MM/DD/YYYY</option>
                    <option>YYYYMMDD</option>
                </select>
            </div>
        </div>

        <div class="actions">
            <div class="header">
                <span>Actions</span>
                <div class="line"></div>
            </div>
            <span class="subTitle">Show Actions:</span>
            <div class="setting">
                <label>
                    <input type="checkbox" name="action_add_to_sourcing"/>
                    <span>"Add To Source Project"</span>
                </label>
                <label>
                    <input type="checkbox" name="action_favorite"/>
                    <span>"Save As Favorites"(Not implement yet.)</span>
                </label>
            </div>
        </div>

        <div class="locals">
            <div class="header">
                <span>Configs</span>
                <div class="line"></div>
            </div>
            <div class="setting form-inline">
                <span class="subTitle">Canvasapp Key:</span>
                <label>
                    <input type="text" name="config_canvasapp_key" class="text"/>
                </label>
            </div>
            <div class="clear"></div>
            <div class="setting form-inline">
                <span class="subTitle">ApiKey:</span>
                <label>
                    <input type="text" name="config_apiKey" class="text"/>
                </label>
            </div>
            <div class="clear"></div>
            <div class="setting form-inline">
                <span class="subTitle">ApiSecret:</span>
                <label>
                    <input type="text" name="config_apiSecret" class="text"/>
                </label>
            </div>
            <div class="clear"></div>
            <div class="setting form-inline">
                <span class="subTitle">CallBackUrl:</span>
                <label>
                    <input type="text" name="config_callBackUrl" class="text"/>
                </label>
            </div>
            <div class="clear"></div>
        </div>

        <div class="btns">
            <button class="btn btn-primary save">Save</button>
            <button class="btn cancel">Cancel</button>
        </div>
</script>

