<script id="SavedSearches" type="text/html">
    <div class="SavedSearches">
        <div class="control-group">
            <input name="searchName" type="text"/>
            <button class="btn btn-primary">Save</button>
        </div>
        <ul>
            {{#each data}}
                <li data-id="{{id}}" data-name="{{name}}" data-value="{{search}}">{{name}}<span class="clear">×</span>
                </li>
            {{/each}}
            <li class="btns">
                <span class="{{display}}" data-show="more" data-offset="5"><i class="icon-arrow-down" ></i>more</span>
    		    <span class="hide" data-show="less"><i class="icon-arrow-up" data-show="less"></i>less<span>
            </li>
        </ul>
    </div>
</script>

<script id="SavedSearches-more" type="text/html">
    {{#each data}}
        <li data-id="{{id}}" data-name="{{name}}" data-value="{{search}}">{{name}}<span class="clear">×</span></li>
    {{/each}}
    <li class="btns">
        <span class="{{display}}" data-show="more" data-offset="{{offset}}"><i class="icon-arrow-down" ></i>more</span>
    		    <span class="show" data-show="less" data-hide="{{toHide}}"><i class="icon-arrow-up" data-show="less"></i>less<span>
    </li>
</script>

<script id="SavedSearches-detail" type="text/html">
    {{#each data}}
        <li data-id="{{id}}" data-name="{{name}}" data-value="{{search}}">{{name}}<span class="clear">×</span>
        </li>
    {{/each}}
    <li class="btns">
        <span class="{{display}}" data-show="more" data-offset="5"><i class="icon-arrow-down" ></i>more</span>
    	<span class="hide" data-show="less"><i class="icon-arrow-up" data-show="less"></i>less<span>
    </li>
</script>
