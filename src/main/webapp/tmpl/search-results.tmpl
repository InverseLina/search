<script id="search-items" type="text/html">
  {{#each items}}
      <div class="row">
          <div>{{id}}</div>
          <div><span>{{name}}</span></div>
          <div><span>{{createdate}}</span></div>
          <div><span>{{title}}</span></div>
      </div>
  {{/each}}
</script>
<script id="search-query-error" type="text/html">
  <div class="alert alert-block alert-error fade in">
      <strong>{{title}}:</strong> {{detail}}
  </div>
</script>

<script id="search-empty" type="text/html">
    <div class="table">
        {{{incl "search-items-header"}}}
        <div class='tableBody'>
            <div class="empty-search"><span>Enter Search Criteria</span></div>
        </div>
    </div>
</script>

<script id="search-loading" type="text/html">
	<span class="loading badge badge-info">Loading...</span>
</script>

<script id="search-items-header" type="text/html">
    <div class="tableHeader ">
        <div class="row">
            <div data-column="Id">ID<span class="desc">&darr;</span><span class="asc">&uarr;</span></div>
            <div data-column="Name">Name<span class="desc">&darr;</span><span class="asc">&uarr;</span></div>
            <div data-column="CreateDate">Create Date<span class="desc">&darr;</span><span class="asc">&uarr;</span></div>
            <div data-column="Title">Title<span class="desc">&darr;</span><span class="asc">&uarr;</span></div>
        </div>
    </div>
</script>
<script id="search-query-notfound" type="text/html">
    <div class="table">
      {{{incl "search-items-header"}}}
        <div class='tableBody'>
            <div class="alert alert-block alert-info fade in">
                <strong>Nothing found,</strong> please change search criteria and retry
            </div>
        </div>
    </div>
</script>