<script id="search-items" type="text/html">
    <table class="scrollTable">
        {{{colHeader "search-items-header" }}}
        <tbody>
            {{#each items}}
            <tr>
                <!--<td class="checkboxCol"><input type="checkbox" checked="true"/></td>-->
                {{#each row}}
                    <td data-column="{{name}}"><span>{{rmComma value}}</span></td>
                {{/each}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</script>

<script id="search-items-header" type="text/html">
    <thead>
         <tr>
             <!--<th class="checkboxCol"></th>-->
             {{#each displayColumns}}
                 <th style="width:{{../colWidth}}%" data-column="{{name}}">
                 <!--{{display}}<span class="desc">&darr;</span><span class="asc">&uarr;</span>-->
	                 <div class="headerTh {{name}}Th">
		               <span class="columnName">{{display}}</span>
                         <div class="selectedItems">
                             <!--<span class="item" data-name="aaa bbb">aaa bbb</span>
                             <span class="item" data-name="aaa bbb">aaa bbb</span>
                             <span class="item" data-name="aaa bbb">aaa bbb</span>-->
                             <span class="addFilter" styee="display:none">+&nbsp;add filter</span>
                         </div>
		               <span class="desc">&darr;</span><span class="asc">&uarr;</span>
		             </div>
                 </th>
             {{/each}}
         </tr>
    </thead>
</script>

<script id="search-items-header-with-body" type="te6xt/html">
    <table>
        <thead>
             <tr>
                 <!--<th class="checkboxCol"></th>-->
                 {{#each displayColumns}}
                     <th style="width:{{../colWidth}}%" data-column="{{name}}">
						<div class="headerTh {{name}}Th">
		                  <span class="columnName">{{display}}</span>
                            <div class="selectedItems">
                                <!--<span class="item" data-name="aaa bbb">aaa bbb</span>
                                <span class="item" data-name="aaa bbb">aaa bbb</span>
                                <span class="item" data-name="aaa bbb">aaa bbb</span>-->
                                <span class="addFilter" styee="display:none">+&nbsp;add filter</span>
                            </div>
		                  <span class="desc">&darr;</span><span class="asc">&uarr;</span>
		                </div>
					 </th>
                 {{/each}}
             </tr>
        </thead>
        <tbody>
        <tr class="full">
            <td colspan="{{colsLen}}">
                {{{decode block}}}
            </td>
        </tr>
        </tbody>
    </table>
</script>

<script id="search-query-notfound" type="text/html">
    {{#colBody 'search-items-header-with-body'}}
        <div class="alert alert-block alert-info fade in">
            <strong>Nothing found,</strong> please change search criteria and retry
        </div>
    {{/colBody}}
</script>

<script id="search-loading" type="text/html">
    {{#colBody 'search-items-header-with-body'}}
        <span class="loading badge badge-info">Loading...</span>
    {{/colBody}}
</script>


<script id="search-empty" type="text/html">
    {{#colBody 'search-items-header-with-body'}}
        <div class="empty-search">
            <span>Enter Search keywords or filter criteria</span>
            <span>(visual tutorial goes here)</span>

        </div>
    {{/colBody}}
</script>

<script id="search-query-error" type="text/html">
    {{#colBody 'search-items-header-with-body'}}
        <div class="alert alert-block alert-error fade in">
            <strong>{{title}}:</strong> {{detail}}
        </div>
    {{/colBody}}
</script>

<script id="search-items-header-add-item" type="text/html">
    <span class="item" data-name="{{name}}">{{name}}</span>
</script>