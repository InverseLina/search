<script id="search-items" type="text/html">
  <table class="table">
    <thead class='fixedHeader'>
      <tr>
        <th class="id">ID</th>
        <th class="name">Name</th>
        <th class="title">Title</th>
      </tr>
    </thead>
    <tbody class='scrollContent'>
      {{#each items}}
      <tr>
          <td class="id">{{id}}</td>
          <td class="name">{{Name}}</td>
          <td class="title">{{Title}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</script>