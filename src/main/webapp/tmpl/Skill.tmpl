<script id="Skill" type="text/html">
    <div class="Skill sideSectionContent">
    </div>
</script>

<script id="Skill-detail" type="text/html">
    <div class="resultInfo">
        Result size: <span class="result-count"></span> |
        Duration: <span class="result-duration"></span> ms
    </div>

    <ul class="skillList">
        <li class="all"  data-name="ALL"><label><input type="checkbox"/><span>Any Skill</span></label></li>
        <li >
            <div class="control-group">
                <input name="skill" type="text" placeholder="Skill"/>
            </div>
        </li>

        {{#each skills}}
            <li data-name="{{name}}"><label><input type="checkbox"/><span>{{name}}&nbsp;</span>(<span class="validCount"></span>{{count}})</label></li>
        {{/each}}
        <li class="btns">
            <span data-show="more"><i class="icon-arrow-down" ></i>more</span>
    		<span class="{{hide skills 6}} " data-show="less"><i class="icon-arrow-up" data-show="less"></i>less<span>
        </li>
    </ul>
</script>

<script id="Skill-add" type="text/html">
    {{#each skills}}
        <li style="display: none" class="toShow"  data-name="{{name}}"><label><input type="checkbox"/><span>{{name}}&nbsp;</span>(<span class="validCount"></span>{{count}})</label></li>
    {{/each}}
</script>
