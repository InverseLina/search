<script id="Company" type="text/html">
    <div class="Company sideSectionContent">
    </div>
</script>

<script id="Company-detail" type="text/html">
    <div class="resultInfo">
        Result size: <span class="result-count"></span> |
        Duration: <span class="result-duration"></span> ms
    </div>

    <ul class="companyList">
        <li class="currentCompany">
            <div class="control-group">
                <label class="checkbox">
                    <input name="curCompany" type="checkbox" value='true'> Current Company
                </label>
            </div>
        </li>
        <li class="all" data-name="ALL"><label><input type="checkbox" value=""/><span>Any Company</span></label></li>
        <li>
            <div class="control-group">
                <input name="company" type="text" placeholder="Company Name"/>
            </div>
        </li>
        {{#each companies}}
            <li data-name="{{name}}"><label><input type="checkbox"/><span>{{name}}&nbsp;</span>(<span
                    class="validCount"></span>{{count}})</label></li>
        {{/each}}
        <li class="btns">
            <span data-show="more"><i class="icon-arrow-down"></i>more</span>
    		<span class="{{hide companies 6}} " data-show="less"><i class="icon-arrow-up"
                                                                    data-show="less"></i>less<span>
        </li>
    </ul>
</script>

<script id="Company-add" type="text/html">
    {{#each companies}}
        <li style="display: none" class="toShow" data-name="{{name}}"><label><input type="checkbox"/><span>{{name}}&nbsp;</span>(<span class="validCount"></span>{{count}})</label></li>
    {{/each}}
</script>
<script id="Company-filter" type="text/html">
    <div class="form-inline filter">
        <label>Min Years:</label><input type="text" class="input-small" placeholder="Min">
        <label>Max Years:</label><input type="text" class="input-small" placeholder="Max">
    </div> 
</script>

